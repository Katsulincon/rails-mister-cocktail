<h1>Doses of <%= @cocktail.name %></h1>

<ul>
  <% @doses.each do |dose| %>
    <li><%= dose.ingredient.name %>| <%= dose.description %> <%= link_to "delete?",destroy_dose_path(dose), method: :delete, data: {confirm: "Are you sure?"}  %></li>
  <% end %>
</ul>

<%= link_to "Add doses",new_cocktail_dose_path(@cocktail)  %>
<%= link_to "Back to lists",cocktails_path  %>
