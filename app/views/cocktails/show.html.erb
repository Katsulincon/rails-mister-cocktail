<div class="navbar navbar-expand-sm navbar-light navbar-lewagon show-nav">
  <%= link_to "#", class: "navbar-brand" do %>
    <h4 id="show-nav-font">Cocktail & Cocktail</h4>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Add Cocktail?", new_cocktail_path, class: "btn btn-ghost" %>
      </li>
    </ul>
  </div>
</div>

<div class="container">
  <div class="card-product">
  <!--   <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" /> -->
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    <div class="card-product-infos">
      <h2><%= @cocktail.name %></h2>
      <% @doses.each do |dose| %>
        <p><%= dose.ingredient.name %>   | <%= dose.description %> <%= link_to "delete?",destroy_dose_path(dose), method: :delete, data: {confirm: "Are you sure?"}  %></p>
      <% end %>
    </div>
  </div>
</div>







<%= link_to "Add doses",new_cocktail_dose_path(@cocktail)  %>
